;
; USE LASTJOB FOR DRIVE #
; CMD IS USED FOR JOB COMMAND
;
SETLJB
	LDA LSTJOB,X
	AND #1
	ORA CMD
;
; SET JOB UP AND CHECK T&S
;  .A=COMMAND FOR JOBS
;  .X=JOB NUMBER
;
SETJOB
	PHA
	STX JOBNUM
;<HD>
	LDA REVCNT      ;SET RECOV COUNT
	AND #$1F
	STA ERRCNT,X
	PLA
	STA CMD
	STA JOBS,X
	STA LSTJOB,X
	JMP HDSTRT      ;START A NEW JOB <HD>
;
;
; DO JOB IN .A, SET UP ERROR COUNT
; AND LSTJOB. RETURN WHEN JOB DONE OK
; JMP TO ERROR IF ERROR RETURNS
;
DOIT	STA CMD
DOIT2	LDA CMD
	JSR SETJOB
	JMP WATJOB
.END
