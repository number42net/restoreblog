.PAG 'TXINIT2'
; 02/28/83 BP
; TRANSFER EXEC INIT ROUTINE EXAMPLE 2
;
I6509	= $0001         ;6509 INDIRECTION REGISTER
IPOINT	= $00AC         ;RAM INDIRECT POINTER
START	= $0200         ;START OF PROGRAM IN SEG 03
STARTA= START+2 ;USED TO PUSH START ADDR + 2 ON STACK
EXSUB	= $FEAB         ;EXECUTE SUBROUTINE FAR VECTOR
;
	*=$0780
	LDA #03         ;TRANSFER TO SEGMENT 3
	STA I6509       ;6509 INDIRECTION REGISTER
	LDY #01         ;INIT IPOINT TO $0100
	STY IPOINT+1
	DEY
	STY IPOINT
	DEY
	LDA #$FE        ;INIT STACK POINTER TO $FE
	STA (IPOINT),Y  ;$01FF = $FE
	LDA #>STARTA    ;HI ADDR + 2
	PHA
	LDA #<STARTA    ;LO ADDR + 2
	PHA
	JMP EXSUB       ;GO EXEC ROUTN
.END
