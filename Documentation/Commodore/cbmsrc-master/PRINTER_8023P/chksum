	.PAGE 'CHKSUM'
	* =$DF00
;
;UTILITY TO COMPUTE CHECKSUM
;
;
;1) LOAD WITH OFFSET=$4000
;2) .G 1F00
;3) PROGRAM 4 2716'S
;   0 2000-27FF
;   1 2800-2FFF
;   2 3000-37FF
;   3 3800-3FFF
;
	LDA #0
	STA CHKSUM-$C000 ;MUST BE ZERO
	LDA #>ROM->$C000 ;START CHECKSUM
;
	CLC
	STA $1
	LDA #0
	STA $0
	LDX #32
	LDY #0
CHK1
	ADC ($0)Y
	INY
	BNE CHK1
;
	INC $1
	DEX
	BNE CHK1
;
	ADC #0
	STA $1
	LDA #>ROM
	SEC
	SBC $1
	SBC #0 ;.A=CHECKSUM BYTE
	STA CHKSUM-$C000
	BRK
	.END
