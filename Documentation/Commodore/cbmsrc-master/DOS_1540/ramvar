FILSEC	*=*+MXFILS      ;         /SECTOR
.SKIP
;  CHANNEL TABLES
;ZP:  FILTYP *=*+MXCHNS ; CHANNEL FILE TYPE
;ZP:  CHNRDY *=*+MXCHNS      ; CHANNEL STATUS
