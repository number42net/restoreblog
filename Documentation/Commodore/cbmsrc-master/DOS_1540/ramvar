;********************************
;*
LSTJOB	*=*+BFCNT+3     ; LAST JOB
;ZP:  LINTAB *=*+MAXSA+1     ; SA:LINDX TABLE
;ZP:  CHNDAT *=*+MXCHNS      ; CHANNEL DATA BYTE
DSEC	*=*+MXCHNS      ; SECTOR OF DIRECTORY ENTRY
DIND	*=*+MXCHNS      ; INDEX OF DIRECTORY ENTRY
