CBPTR	= BAMJOB+BAMJOB+4
ERRCHN	= MXCHNS-1
ERRSA	= 16
CMDCHN	= MXCHNS-2
LXINT	= $3F
CMDSA	= 15
APMODE	= 2
MDMODE	= 3
RDMODE	= 0
WTMODE	= 1
RELTYP	= 4             ; RELATIVE TYPE FILE
